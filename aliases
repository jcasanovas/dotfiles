# -------------------------------------------------------------------
# Directory movement
# -------------------------------------------------------------------
alias update-dotfiles='rcup -v -d . -k -x README.md'

# -------------------------------------------------------------------
# Directory movement
# -------------------------------------------------------------------
alias ..='cd ..'
alias projects='~/projects/'

# -------------------------------------------------------------------
# Unix
# -------------------------------------------------------------------
alias c='clear'
alias k='kill -9'
alias ls='ls -GFh'
alias grep='grep --color=always'

# -------------------------------------------------------------------
# Ruby and Rails
# -------------------------------------------------------------------
alias be='bundle exec'
alias rs='bundle exec rails server'
alias rc='bundle exec rails console'
alias bers='bundle exec rspec spec'
alias ber='bundle exec rspec'
alias routes-with='bundle exec rake routes | grep'
alias karma_start='bundle exec rake karma:start'

# -------------------------------------------------------------------
# GIT
# -------------------------------------------------------------------
alias gst='git status'
alias gco='git checkout'
alias gitka='gitk --all'
alias gcoi='git checkout integration'
alias gri2='git rebase -i HEAD~2'
alias master='git checkout master'
alias fixup='git add . ; git commit --amend --no-edit'

# -------------------------------------------------------------------
# WUAKI
# -------------------------------------------------------------------
connect_servers(){
  cd ~/projects/wuaki_deploys ; bundle exec cap $1 $2 servers:list
}

alias connect=connect_servers
alias cb='cd ~/projects/cerberus; RACK_ENV=development bundle exec rackup -p 4000'
alias cb-test='cd ~/projects/cerberus; RACK_ENV=test bundle exec rackup -p 5000'
alias start_worker='QUEUE=* VVERBOSE=1 bundle exec rake resque:work'

# -------------------------------------------------------------------
# TMUX
# -------------------------------------------------------------------
tmux_kill_session(){
  tmux kill-session -t $1
}

alias ks=tmux_kill_session
alias tmux='TERM=xterm-256color tmux -2'
alias tmuxinator='TERM=xterm-256color tmuxinator'
alias mux='TERM=xterm-256color mux'

